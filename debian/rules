#!/usr/bin/make -f

export PIKA_BUILD_ARCH = $(shell cat ../pika-build-arch)
export PATH := /root/.cargo/bin:$(PATH)

override_dh_prep:
# amd64 build prep
ifeq (amd64-v3,$(PIKA_BUILD_ARCH))
# Does not support LTO due to dylib-lto
#export RUSTFLAGS = -C target-cpu=x86-64-v3 -C lto=fat -C embed-bitcode -C codegen-units=1 -C opt-level=3 -Zdylib-lto
export RUSTFLAGS = -C target-cpu=x86-64-v3 -C opt-level=3
endif

%:
	dh ${@}

override_dh_auto_install:
	mkdir -p debian/cfhdb/usr/bin/
	cargo fetch
	cargo build --release
	cp -vf target/release/pika-device-manager debian/pika-device-manager/usr/bin/
	chmod 755 debian/pika-device-manager/usr/bin/pika-device-manager
	mkdir -p debian/pika-device-manager/usr/share/glib-2.0/schemas/
	cp data/*.xml debian/pika-device-manager/usr/share/glib-2.0/schemas/
	mkdir -p debian/pika-device-manager/usr/share/applications
	mkdir -p debian/pika-device-manager/usr/share/icons/hicolor/scalable/apps
	cp -vf data/com.github.pikaos-linux.pikadevicemanager.svg debian/pika-device-manager/usr/share/icons/hicolor/scalable/apps/
	cp -vf data/com.github.pikaos-linux.pikadevicemanager.desktop  debian/pika-device-manager/usr/share/applications/
